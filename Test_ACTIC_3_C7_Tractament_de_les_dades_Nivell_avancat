                },
                {
                    id: "C7M5Q50",
                    tipus: "multiseleccio",
                    text: "Quines consideracions de seguretat o privadesa són rellevants quan es distribueixen informes amb dades sensibles?",
                    opcions: [
                        "Assegurar que només es mostren les dades necessàries i que no hi ha camps ocults amb informació sensible.",
                        "Utilitzar formats d'exportació segurs (p. ex., PDF amb contrasenya si cal).",
                        "Restringir l'accés a l'informe si conté informació confidencial.",
                        "No hi ha cap consideració especial, ja que els informes no modifiquen dades."
                    ],
                    correcta: ["Assegurar que només es mostren les dades necessàries i que no hi ha camps ocults amb informació sensible.", "Utilitzar formats d'exportació segurs (p. ex., PDF amb contrasenya si cal).", "Restringir l'accés a l'informe si conté informació confidencial."],
                    dificultat: "difícil"
                }
            ]
        };

        let currentModuleQuestions = [];
        let currentQuestionIndex = 0;
        let selectedOptions = [];
        let correctAnswersCount = 0;
        let questionsAnsweredCount = 0;

        const contentDiv = document.getElementById('content');
        const questionText = document.getElementById('question-text');
        const optionsContainer = document.getElementById('options-container');
        const matchingContainer = document.getElementById('matching-container');
        const feedbackDiv = document.getElementById('feedback');
        const checkBtn = document.getElementById('checkBtn');
        const nextBtn = document.getElementById('nextBtn');
        const scoreDisplay = document.getElementById('score');
        const restartBtn = document.getElementById('restartBtn');
        const progressBar = document.getElementById('progress-bar');
        const barraNivells = document.getElementById('barra-nivells');

        function iniciaNivell(modul) {
            let modulKey = `modul_${modul}`;
            if (preguntes[modulKey]) {
                currentModuleQuestions = [...preguntes[modulKey].preguntes]; // Còpia per barrejar
                barrejaPreguntes(currentModuleQuestions); // Barreja les preguntes
                currentQuestionIndex = 0;
                correctAnswersCount = 0;
                questionsAnsweredCount = 0;
                contentDiv.classList.remove('hidden');
                feedbackDiv.textContent = '';
                nextBtn.classList.add('hidden');
                restartBtn.classList.add('hidden');
                barraNivells.querySelectorAll('button').forEach(btn => btn.classList.remove('selected-module'));
                document.querySelector(`#barra-nivells button:nth-child(${modul})`).classList.add('selected-module');
                displayQuestion();
                updateProgressBar();
            } else {
                alert('Mòdul no trobat.');
            }
        }

        function barrejaPreguntes(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
        }

        function displayQuestion() {
            if (currentQuestionIndex < currentModuleQuestions.length) {
                const question = currentModuleQuestions[currentQuestionIndex];
                questionText.textContent = `${currentQuestionIndex + 1}. ${question.text}`;
                optionsContainer.innerHTML = '';
                matchingContainer.innerHTML = '';
                feedbackDiv.textContent = '';
                checkBtn.classList.remove('hidden');
                nextBtn.classList.add('hidden');
                restartBtn.classList.add('hidden');
                selectedOptions = [];
                scoreDisplay.textContent = `Encerts: ${correctAnswersCount} / ${questionsAnsweredCount}`;
                updateProgressBar();

                if (question.tipus === 'unica' || question.tipus === 'multiseleccio') {
                    optionsContainer.classList.remove('hidden');
                    matchingContainer.classList.add('hidden');
                    question.opcions.forEach((option, index) => {
                        const optionDiv = document.createElement('div');
                        optionDiv.classList.add('option');
                        optionDiv.textContent = option;
                        optionDiv.dataset.index = index;
                        optionDiv.onclick = () => selectOption(optionDiv, question.tipus);
                        optionsContainer.appendChild(optionDiv);
                    });
                } else if (question.tipus === 'parelles') {
                    optionsContainer.classList.add('hidden');
                    matchingContainer.classList.remove('hidden');
                    const availableOptions = question.opcions[0].disponible.sort(() => Math.random() - 0.5); // Barrejar opcions disponibles

                    question.opcions.forEach((item, index) => {
                        const row = document.createElement('div');
                        row.classList.add('matching-row');

                        const leftDiv = document.createElement('div');
                        leftDiv.classList.add('matching-left');
                        leftDiv.textContent = item.esquerra;
                        row.appendChild(leftDiv);

                        const select = document.createElement('select');
                        select.classList.add('matching-select');
                        select.dataset.leftIndex = index;

                        const defaultOption = document.createElement('option');
                        defaultOption.value = "";
                        defaultOption.textContent = "Selecciona...";
                        select.appendChild(defaultOption);

                        availableOptions.forEach(opt => {
                            const option = document.createElement('option');
                            option.value = opt;
                            option.textContent = opt;
                            select.appendChild(option);
                        });
                        select.onchange = (e) => updateMatchingSelection(e.target);
                        row.appendChild(select);
                        matchingContainer.appendChild(row);
                    });
                }
            } else {
                showResults();
            }
        }

        function selectOption(optionDiv, type) {
            if (type === 'unica') {
                optionsContainer.querySelectorAll('.option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                optionDiv.classList.add('selected');
                selectedOptions = [optionDiv.textContent];
            } else if (type === 'multiseleccio') {
                optionDiv.classList.toggle('selected');
                selectedOptions = Array.from(optionsContainer.querySelectorAll('.option.selected')).map(opt => opt.textContent);
            }
        }

        function updateMatchingSelection(selectElement) {
            const leftIndex = parseInt(selectElement.dataset.leftIndex);
            const selectedValue = selectElement.value;
            // Ensure selectedOptions array is correctly sized
            if (selectedOptions.length !== currentModuleQuestions[currentQuestionIndex].parelles.length) {
                selectedOptions = Array(currentModuleQuestions[currentQuestionIndex].parelles.length).fill(null);
            }
            selectedOptions[leftIndex] = selectedValue;
        }

        checkBtn.addEventListener('click', () => {
            const question = currentModuleQuestions[currentQuestionIndex];
            questionsAnsweredCount++;

            if (question.tipus === 'unica') {
                const isCorrect = selectedOptions.length === 1 && selectedOptions[0] === question.correcta;
                markOptions(isCorrect, question.correcta);
            } else if (question.tipus === 'multiseleccio') {
                const correctSet = new Set(question.correcta);
                const selectedSet = new Set(selectedOptions);
                const isCorrect = selectedSet.size === correctSet.size && [...selectedSet].every(opt => correctSet.has(opt));
                markOptions(isCorrect, question.correcta);
            } else if (question.tipus === 'parelles') {
                let correctPairs = 0;
                const rows = matchingContainer.querySelectorAll('.matching-row');
                rows.forEach((row, index) => {
                    const select = row.querySelector('.matching-select');
                    const leftValue = question.parelles[index].esquerra;
                    const correctAnswer = question.parelles[index].correcta;
                    const selectedAnswer = select.value;

                    if (selectedAnswer === correctAnswer) {
                        row.classList.add('correct');
                        correctPairs++;
                    } else {
                        row.classList.add('incorrect');
                        // Opcional: mostrar la correcta directament al desplegable o en feedback
                        select.style.borderColor = 'red';
                    }
                });
                const isCorrect = correctPairs === question.parelles.length;
                if (isCorrect) {
                    correctAnswersCount++;
                    feedbackDiv.innerHTML = "<p class='text-green-600 font-bold'>😊 Molt bé!</p>";
                } else {
                    feedbackDiv.innerHTML = "<p class='text-red-600 font-bold'>❌ Revisa les respostes.</p>";
                    let respostesCorrectesHtml = "<p class='text-sm text-gray-700 mt-1'>Respostes correctes:</p><ul>";
                    question.parelles.forEach((p) => {
                        respostesCorrectesHtml += `<li>${p.esquerra}: <strong>${p.correcta}</strong></li>`;
                    });
                    respostesCorrectesHtml += "</ul>";
                    feedbackDiv.innerHTML += respostesCorrectesHtml;
                }
                scoreDisplay.textContent = `Encerts: ${correctAnswersCount} / ${questionsAnsweredCount}`;
                updateProgress();
                nextBtn.classList.remove('hidden');
                bloquejaInteraccio();
            }
        });

        function markOptions(isCorrect, correctAnswer) {
            if (isCorrect) {
                correctAnswersCount++;
                feedbackDiv.innerHTML = "<p class='text-green-600 font-bold'>😊 Molt bé!</p>";
            } else {
                feedbackDiv.innerHTML = "<p class='text-red-600 font-bold'>❌ Incorrecte.</p>";
            }

            optionsContainer.querySelectorAll('.option').forEach(opt => {
                opt.classList.remove('selected');
                if (Array.isArray(correctAnswer)) {
                    if (correctAnswer.includes(opt.textContent)) {
                        opt.classList.add('correct');
                    } else if (selectedOptions.includes(opt.textContent)) {
                        opt.classList.add('incorrect');
                    }
                } else {
                    if (opt.textContent === correctAnswer) {
                        opt.classList.add('correct');
                    } else if (selectedOptions.includes(opt.textContent)) {
                        opt.classList.add('incorrect');
                    }
                }
            });

            scoreDisplay.textContent = `Encerts: ${correctAnswersCount} / ${questionsAnsweredCount}`;
            updateProgress();
            nextBtn.classList.remove('hidden');
            bloquejaInteraccio();
        }

        function bloquejaInteraccio() {
            optionsContainer.querySelectorAll('.option').forEach(opt => {
                opt.onclick = null;
                opt.style.cursor = 'default';
            });
            matchingContainer.querySelectorAll('.matching-select').forEach(select => {
                select.disabled = true;
            });
            checkBtn.classList.add('hidden');
        }

        nextBtn.addEventListener('click', () => {
            currentQuestionIndex++;
            displayQuestion();
        });

        function showResults() {
            questionText.textContent = "Test finalitzat!";
            optionsContainer.innerHTML = "";
            matchingContainer.innerHTML = "";
            feedbackDiv.innerHTML = `<p class="text-xl font-bold">Has encertat ${correctAnswersCount} de ${questionsAnsweredCount} preguntes.</p>`;
            checkBtn.classList.add('hidden');
            nextBtn.classList.add('hidden');
            restartBtn.classList.remove('hidden');
            scoreDisplay.textContent = `Resultat final: ${correctAnswersCount} / ${questionsAnsweredCount}`;
            progressBar.style.width = '100%';
        }

        restartBtn.addEventListener('click', () => {
            const currentModulButton = barraNivells.querySelector('.selected-module');
            if (currentModulButton) {
                const modulIndex = Array.from(barraNivells.children).indexOf(currentModulButton) + 1;
                iniciaNivell(modulIndex);
            } else {
                // Default to modul 1 if no module was selected (should not happen normally)
                iniciaNivell(1);
            }
        });

        function updateProgressBar() {
            if (currentModuleQuestions.length > 0) {
                const progress = (questionsAnsweredCount / currentModuleQuestions.length) * 100;
                progressBar.style.width = `${progress}%`;
            } else {
                progressBar.style.width = '0%';
            }
        }

        // Initialize with the first module selected by default if needed
        document.addEventListener('DOMContentLoaded', () => {
            // No iniciem cap mòdul per defecte, esperem la interacció de l'usuari
        });
    </script>
</body>
</html>
